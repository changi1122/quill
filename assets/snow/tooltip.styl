tooltipMargin = 8px

.ql-snow
  .ql-tooltip
    background-color: #fff
    border: 1px solid borderColor
    box-shadow: 0px 0px 5px shadowColor
    color: textColor
    padding: 5px 12px
    white-space: nowrap
    input[type=text]
      display: none
      border: 1px solid borderColor
      font-size: 15px
      height: 26px
      margin: 0px
      padding: 3px 5px
      width: 170px
    a.ql-preview
      display: inline-block
      max-width: 200px
      overflow-x: hidden
      text-overflow: ellipsis
      vertical-align: top
    a.ql-action::after
      border-right: 1px solid borderColor
      content: '수정'
      margin-left: tooltipMargin*2
      padding-right: tooltipMargin
    a.ql-remove::before
      content: '삭제'
      margin-left: tooltipMargin
    a
      line-height: 26px
  .ql-tooltip.ql-editing
    a.ql-preview, a.ql-remove, span.ql-preview-formula
      display: none
    input[type=text]
      display: inline-block
    a.ql-action::after
      border-right: 0px
      content: '저장'
      padding-right: 0px
  .ql-tooltip[data-mode=link]::before
    content: "링크 입력 :"
    margin-right: tooltipMargin
  .ql-tooltip[data-mode=formula]::before
    content: "수식 입력 :"
    margin-right: tooltipMargin
  .ql-tooltip[data-mode=video]::before
    content: "비디오 소스 입력 :"
    margin-right: tooltipMargin
